@model Dish
<div class="text-center">
    <form action="/dish/add" method="post">
    <div class="form-group">
        <label for="Name">Dish Name</label>
        <input asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ChefName">Chef's Name</label>
        <input asp-for="ChefName">
        <span asp-validation-for="ChefName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Calories">Calories</label>
        <input asp-for="Calories">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Tastiness">Tastiness</label>
        <input asp-for="Tastiness">
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="submit" class="btn btn-info">
    </div>
    </form>
</div>